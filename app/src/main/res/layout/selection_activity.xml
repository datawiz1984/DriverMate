<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.example.dell.googleservicerapi.SelectionActivity"
	android:orientation="vertical">

	<ImageView
		android:layout_width="200dp"
		android:layout_height="45dp"
		android:layout_gravity="center"
		android:layout_marginTop="50dp"
		android:background="@drawable/img_selectionheader"/>
	
	<Button
		android:id="@+id/driverLoginBtn"
		android:layout_width="120dp"
		android:layout_height="120dp"
		android:layout_marginTop="40dp"
		android:layout_gravity="center"
		android:background="@drawable/img_driver"/>

	<Button
		android:id="@+id/customerLoginBtn"
		android:layout_width="120dp"
		android:layout_height="120dp"
		android:layout_marginTop="30dp"
		android:layout_gravity="center"
		android:background="@drawable/img_customer"/>

	<Button

		android:id="@+id/managerLoginBtn"
		android:layout_width="120dp"
		android:layout_height="120dp"
		android:layout_gravity="center"
		android:background="@drawable/img_manager"
		android:layout_marginTop="30dp"/>

</LinearLayout>
